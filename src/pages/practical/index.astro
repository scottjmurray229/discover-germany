---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import EmailCapture from '../../components/EmailCapture.astro';
import FAQ from '../../components/FAQ.astro';

const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'Travel Tips', url: '/practical/' },
];

const pageTitle = 'Germany Travel Tips ‚Äî Visa, Money, Transport & Safety Guide 2026';
const pageDescription = 'Everything you need before your first (or tenth) trip to Germany ‚Äî Schengen visa rules, euros, trains, safety, packing, and cultural etiquette.';

interface TopicSection {
  id: string;
  icon: string;
  title: string;
  gradient: string;
  video?: string;
  items: { label: string; text: string }[];
}

const topics: TopicSection[] = [
  {
    id: 'visa',
    icon: 'üõÇ',
    title: 'Visa & Entry Requirements',
    gradient: 'linear-gradient(135deg, #1565C0 0%, #42A5F5 100%)',
    video: '/videos/pillar/practical-break-visa.mp4',
    items: [
      { label: 'Schengen Visa-Free', text: 'Citizens of the US, UK, Canada, Australia, Japan, and 50+ other countries can enter Germany visa-free for up to 90 days within any 180-day period. Germany is part of the Schengen Area, so your 90 days cover all Schengen countries combined.' },
      { label: 'ETIAS (Starting 2026)', text: 'The EU\'s new ETIAS travel authorization system requires visa-exempt travelers to register online before arrival. It costs around 7 EUR, is valid for 3 years, and takes minutes to complete. Apply at etias.com before your trip.' },
      { label: 'Documents to Carry', text: 'Keep your passport on you at all times ‚Äî German law requires foreigners to carry valid ID. Hotels will photocopy your passport at check-in (required by law). Your passport must be valid for at least 3 months beyond your planned departure from the Schengen area.' },
      { label: 'EU Citizens', text: 'EU/EEA citizens can enter Germany with just a national ID card ‚Äî no passport needed. There are no time limits on stays for EU nationals. A European Health Insurance Card (EHIC) provides access to state-run healthcare.' },
      { label: 'Customs & Duty-Free', text: 'Non-EU travelers can bring up to 200 cigarettes and 1 liter of spirits duty-free. Declare anything over 10,000 EUR in cash. Keep receipts for luxury purchases ‚Äî you can claim a VAT refund (around 12-15%) at the airport on purchases over 50 EUR from participating stores using the Tax-Free Shopping system.' },
    ],
  },
  {
    id: 'money',
    icon: 'üí∞',
    title: 'Money & ATMs',
    gradient: 'linear-gradient(135deg, #2E7D32 0%, #66BB6A 100%)',
    video: '/videos/pillar/practical-break-money.mp4',
    items: [
      { label: 'Currency: The Euro', text: 'Germany uses the Euro (EUR/‚Ç¨). Coins come in 1c, 2c, 5c, 10c, 20c, 50c, 1 EUR, and 2 EUR denominations. Bills run from 5 EUR to 500 EUR (though 500s are rarely accepted). As of 2026, 1 USD is roughly 0.92 EUR.' },
      { label: 'ATM Strategy', text: 'Use bank ATMs (Geldautomat) attached to major banks like Deutsche Bank, Commerzbank, Sparkasse, or Volksbank. Avoid standalone ATMs in tourist areas ‚Äî they charge higher fees and poor exchange rates. Always choose "withdraw without conversion" to avoid dynamic currency conversion markups.' },
      { label: 'Cash is King', text: 'Germany is surprisingly cash-oriented. Many restaurants, smaller shops, bakeries, and even some hotels are cash-only or cash-preferred. Always carry at least 50-100 EUR in cash. Credit cards (Visa and Mastercard) work at hotels, larger restaurants, and chain stores. Amex and Discover are rarely accepted. The German love of Bargeld (cash) catches many visitors off guard.' },
      { label: 'Tipping Norms', text: 'Tipping is customary in Germany ‚Äî round up or leave 5-10% for good service. When paying the bill, tell the server the total you\'d like to pay (e.g., "Stimmt so" means "keep the change"). Tip 1-2 EUR for hotel porters. Taxi drivers: round up to the nearest euro. Don\'t leave coins on the table ‚Äî hand the tip directly.' },
      { label: 'Daily Budget Ranges', text: 'Budget: 50-80 EUR/day ‚Äî hostels, bakery lunches, public transport. Mid-range: 120-200 EUR/day ‚Äî 3-star hotels, Gasth√§user, museum entry. Luxury: 300+ EUR/day ‚Äî boutique hotels, fine dining, private tours. Germany is moderately priced by Western European standards ‚Äî cheaper than Switzerland or Scandinavia, similar to France.' },
      { label: 'VAT Refund', text: 'Non-EU residents can claim a VAT refund (19% standard rate) on purchases over 50 EUR from a single store. Ask for a Tax-Free form at checkout, get it stamped at customs before checking luggage, then claim cash or card credit at the airport refund desk.' },
    ],
  },
  {
    id: 'transport',
    icon: 'üöÇ',
    title: 'Getting Around',
    gradient: 'linear-gradient(135deg, #E65100 0%, #FF9800 100%)',
    video: '/videos/pillar/practical-break-transport.mp4',
    items: [
      { label: 'Deutsche Bahn (DB) Trains', text: 'Germany\'s national rail network is extensive and connects every major city. ICE high-speed trains link Berlin, Munich, Hamburg, Cologne, and Frankfurt at speeds up to 300 km/h. IC/EC trains cover medium distances. Regional trains (RE/RB) are affordable and reach smaller towns. Book at bahn.com ‚Äî advance tickets (Sparpreis) start at 17.90 EUR and save significantly over walk-up fares.' },
      { label: 'FlixBus & FlixTrain', text: 'Budget alternative to Deutsche Bahn ‚Äî FlixBus connects cities across Germany and Europe at low cost. Berlin to Munich from 15-30 EUR. Book at flixbus.com. FlixTrain operates on select routes at competitive prices. Both are comfortable with WiFi and power outlets.' },
      { label: 'Deutschland-Ticket', text: 'The 49 EUR monthly Deutschland-Ticket covers all local and regional public transport across Germany ‚Äî buses, trams, U-Bahn, S-Bahn, and regional trains (RE/RB). Not valid on ICE or IC trains. Incredible value for travelers staying more than a few days. Buy digitally through the DB Navigator app or local transit apps.' },
      { label: 'Domestic Flights', text: 'Lufthansa, Eurowings, and Ryanair connect major German cities in 1-2 hours. Flights start at 30-60 EUR one-way if booked early. Useful for Berlin to Munich (1 hour vs. 4 by train). Major airports: Frankfurt (FRA), Munich (MUC), Berlin (BER), Hamburg (HAM), D√ºsseldorf (DUS), Cologne/Bonn (CGN).' },
      { label: 'Rental Cars & Autobahn', text: 'Germany\'s Autobahn is famous for sections without speed limits ‚Äî but many stretches have limits of 100-130 km/h. Rental cars start at 30-50 EUR/day. An international driving permit (IDP) is recommended for non-EU licenses. Parking in cities is expensive ‚Äî park-and-ride or use public transport instead. The Romantic Road, Black Forest, and Rhine Valley are best explored by car.' },
      { label: 'City Transport', text: 'German cities have excellent public transport ‚Äî U-Bahn (subway), S-Bahn (commuter rail), trams, and buses. Buy tickets from machines before boarding and validate them ‚Äî plain-clothes inspectors issue 60 EUR fines for riding without a valid ticket. Berlin, Munich, Hamburg, and Cologne have extensive networks. Ride-hailing apps like FreeNow and Uber work in major cities.' },
    ],
  },
  {
    id: 'connectivity',
    icon: 'üì±',
    title: 'SIM Cards & Connectivity',
    gradient: 'linear-gradient(135deg, #6A1B9A 0%, #AB47BC 100%)',
    video: '/videos/pillar/practical-break-connectivity.mp4',
    items: [
      { label: 'eSIM & Local SIMs', text: 'The easiest option is an eSIM from Airalo or Holafly ‚Äî set it up before you land. For physical SIMs, Telekom, Vodafone, and O2 sell prepaid SIM cards at their stores, electronics shops, and some supermarkets. Expect to pay 10-25 EUR for 30 days with 5-20 GB of data. Bring your passport ‚Äî registration is required by German law.' },
      { label: 'US Carrier Coverage', text: 'T-Mobile includes free international data (at 2G speeds) and texting. Google Fi works seamlessly abroad with high-speed data. AT&T International Day Pass costs $12/day. If your plan covers Europe, you may not need a local SIM at all.' },
      { label: 'WiFi Availability', text: 'Free WiFi is available at most hotels, many cafes, and train stations. German WiFi is generally fast ‚Äî 30-100 Mbps is typical. DB trains offer WiFi in ICE first class (free) and second class (limited). Having mobile data as backup is recommended for navigation and translation.' },
      { label: 'Messaging', text: 'WhatsApp is widely used in Germany ‚Äî restaurants, tour operators, and hotels often communicate through it. Download it before your trip. FaceTime and iMessage work normally over WiFi or data.' },
    ],
  },
  {
    id: 'safety',
    icon: 'üè•',
    title: 'Safety & Health',
    gradient: 'linear-gradient(135deg, #C62828 0%, #EF5350 100%)',
    video: '/videos/pillar/practical-break-safety.mp4',
    items: [
      { label: 'Travel Insurance', text: 'Get a policy that covers medical expenses and trip cancellation. German hospitals will treat you regardless of insurance, but a hospital visit without coverage can cost thousands. We use <a href="https://safetywing.com/?referenceID=24858745&utm_source=24858745&utm_medium=Ambassador" target="_blank" rel="noopener sponsored">SafetyWing</a> for every trip ‚Äî affordable and covers you worldwide.' },
      { label: 'EHIC / GHIC (EU Citizens)', text: 'EU citizens should carry a European Health Insurance Card (EHIC) or UK Global Health Insurance Card (GHIC). It covers state-provided medical treatment at the same cost as German residents ‚Äî meaning most emergency care is free or very low cost.' },
      { label: 'Hospitals & Pharmacies', text: 'Germany has excellent healthcare. In emergencies, call 112 (EU emergency number) or 110 (police). Pharmacies (Apotheke, marked with a red A) are well-stocked and pharmacists are knowledgeable. Many medications require a prescription. Rotation schedules ensure at least one Apotheke is open 24/7 in each area ‚Äî check aponet.de for the nearest one.' },
      { label: 'Tap Water', text: 'German tap water is safe to drink everywhere ‚Äî it\'s rigorously tested and often higher quality than bottled water. Restaurants will serve tap water if you ask for "Leitungswasser," though many prefer to sell bottled Mineralwasser. Bring a reusable water bottle ‚Äî refill stations and public fountains are common in cities.' },
      { label: 'Pickpocket Awareness', text: 'Germany is very safe, but pickpocketing can occur in crowded tourist areas ‚Äî especially in Berlin (Alexanderplatz, major S-Bahn stations), Munich (Oktoberfest, Marienplatz), and Cologne (around the cathedral). Use a crossbody bag or front-zip backpack. Keep your phone in your front pocket. Violent crime against tourists is extremely rare.' },
      { label: 'Driving Safety', text: 'The Autobahn is well-maintained but fast-moving ‚Äî stay in the right lane unless overtaking. City parking is tight and expensive. Speed cameras are common and fines are enforced even for foreign drivers. Winter driving in southern Germany and the Alps may require winter tires (Winterreifen) ‚Äî required by law in winter conditions.' },
    ],
  },
  {
    id: 'packing',
    icon: 'üéí',
    title: 'Packing Essentials',
    gradient: 'linear-gradient(135deg, #78350F 0%, #D97706 100%)',
    video: '/videos/pillar/practical-break-packing.mp4',
    items: [
      { label: 'Layered Clothing', text: 'German weather is changeable ‚Äî even in summer, temperatures can drop in the evening or shift quickly. Pack layers: a light jacket, a sweater, and a rain layer. Spring and fall require a proper jacket. Winter demands a warm coat, scarf, hat, and gloves ‚Äî especially for Christmas markets. Summers are warm (25-35¬∞C) but rarely tropical.' },
      { label: 'Power Adapters', text: 'Germany uses Type C (2 round pins) and Type F (2 round pins with grounding clips) plugs at 230V. Bring a universal adapter or a European plug adapter. Your phone chargers and laptops are dual-voltage and work fine. Hair dryers and curling irons need to be rated 110-240V ‚Äî check before plugging in.' },
      { label: 'Comfortable Walking Shoes', text: 'German cities are very walkable, with cobblestone streets, castle ruins, and historic centers to explore. Wear proper walking shoes ‚Äî not flip-flops, not brand-new shoes. Break them in before your trip. You\'ll walk 10-15 km per day easily exploring Berlin, Munich, or Heidelberg.' },
      { label: 'Rain Gear', text: 'Rain is possible year-round in Germany, especially in the north and west. Pack a compact umbrella or a lightweight waterproof jacket. Don\'t let rain deter you ‚Äî some of the most atmospheric German experiences (Christmas markets, castle visits, forest hikes) happen in misty or drizzly conditions.' },
      { label: 'Sunday Prep', text: 'Almost all shops are closed on Sundays in Germany (Sonntagsruhe ‚Äî Sunday rest). Stock up on groceries, toiletries, and essentials on Saturday. Gas stations and some train station shops are exceptions. Restaurants, museums, and tourist attractions are open as normal. This catches many visitors by surprise ‚Äî plan ahead.' },
      { label: 'Day Bag & Pfand', text: 'Carry a crossbody bag or small backpack for daily exploring ‚Äî phone, water bottle, rain layer, adapter, and cash. Germany has a Pfand (deposit) system on most bottles and cans (0.08-0.25 EUR each) ‚Äî return them at supermarket machines for a receipt. Bring a reusable bag ‚Äî plastic bags cost extra at stores.' },
    ],
  },
  {
    id: 'culture',
    icon: 'üá©üá™',
    title: 'Language & Cultural Etiquette',
    gradient: 'linear-gradient(135deg, #0D7377 0%, #14B8A6 100%)',
    video: '/videos/pillar/practical-break-culture.mp4',
    items: [
      { label: 'Basic German Phrases', text: '"Hallo" (hello), "Guten Tag" (good day/formal), "Danke" (thank you), "Bitte" (please/you\'re welcome), "Entschuldigung" (excuse me), "Wie viel kostet das?" (how much?), "Die Rechnung, bitte" (the bill, please), "Wo ist die Toilette?" (where\'s the bathroom?), "Sprechen Sie Englisch?" (do you speak English?). Even a few words earn a warmer welcome ‚Äî Germans genuinely appreciate the effort.' },
      { label: 'Greetings & Formality', text: 'Germans are more formal than Americans. Use "Sie" (formal you) with strangers and in professional settings; "du" (informal you) with friends. Handshakes are the standard greeting ‚Äî firm, brief, with eye contact. In Bavaria, "Gr√º√ü Gott" replaces "Guten Tag." In the north, "Moin" is the all-purpose greeting. Don\'t be offended by German directness ‚Äî it\'s cultural, not rude.' },
      { label: 'Dining Etiquette', text: 'Germans eat earlier than Southern Europeans ‚Äî lunch at noon-1 PM, dinner from 6-8 PM. Say "Guten Appetit" before eating. Water is not automatically served ‚Äî order Mineralwasser (sparkling or still). Bread may have a small charge. The bill won\'t come until you ask ‚Äî say "Zahlen, bitte." Tipping 5-10% is customary for good service. Many restaurants are cash-only.' },
      { label: 'German Beer Culture', text: 'Beer is central to German social life. The Reinheitsgebot (Beer Purity Law) of 1516 still influences brewing today. In Bavaria, Bierg√§rten are communal ‚Äî you can bring your own food but buy beer there. In Cologne, K√∂lsch is served in small glasses (0.2L) and refilled automatically until you place a coaster on top. In Berlin, Kneipen (pubs) are for casual drinks and conversation.' },
      { label: 'Quiet Hours & Rules', text: 'Germans value rules and order. Quiet hours (Ruhezeit) apply from 10 PM to 6 AM and all day Sunday ‚Äî no loud music, construction, or excessive noise. Don\'t jaywalk ‚Äî even when the street is empty, Germans wait for the green light. Recycling is taken seriously ‚Äî separate glass, paper, and packaging. Queue patiently and don\'t cut in line.' },
      { label: 'Regional Differences', text: 'Germany has strong regional identities. Bavarians, Berliners, Rhinelanders, and Northern Germans each have distinct traditions, dialects, and cuisines. Bavaria is more traditional and Catholic; the north is more Protestant and reserved. Eastern Germany has its own post-reunification identity. Berlin is a world unto itself ‚Äî international, creative, and counter-cultural. Don\'t assume Germany is homogeneous ‚Äî each region takes pride in its own character.' },
    ],
  },
];
---
<BaseLayout
  title={pageTitle}
  description={pageDescription}
  pageType="destination"
  schemaData={{ title: pageTitle, description: pageDescription }}
  breadcrumbs={breadcrumbs}
>
  <!-- Hero -->
  <header class="prac-hero">
    <video class="prac-hero-video" autoplay muted loop playsinline preload="metadata">
      <source src="/videos/pillar/practical-hero.mp4" type="video/mp4" />
    </video>
    <div class="prac-hero-gradient"></div>
    <div class="prac-hero-noise"></div>
    <div class="prac-hero-content">
      <h1 class="prac-hero-title">Germany Travel Essentials</h1>
      <p class="prac-hero-subtitle">Schengen visa rules, euro strategy, train travel, safety tips, packing lists, and the cultural etiquette that turns a good trip into a great one.</p>
      <div class="prac-hero-meta">
        <div class="prac-hero-meta-item">
          <span class="prac-hero-meta-label">Topics</span>
          <span class="prac-hero-meta-value">7</span>
        </div>
        <div class="prac-hero-meta-item">
          <span class="prac-hero-meta-label">Updated</span>
          <span class="prac-hero-meta-value">Feb 2026</span>
        </div>
        <div class="prac-hero-meta-item">
          <span class="prac-hero-meta-label">Trips</span>
          <span class="prac-hero-meta-value">25+</span>
        </div>
      </div>
    </div>
    <div class="prac-scroll-hint">Scroll<br />&#8595;</div>
  </header>

  <!-- Breadcrumb -->
  <div class="container-content">
    <Breadcrumb items={breadcrumbs} />
  </div>

  <!-- Personal intro -->
  <section class="prac-personal reveal">
    <div class="container-content">
      <blockquote class="prac-personal-quote">
        <p>We've made every mistake in this guide at least once ‚Äî from getting fined for riding the U-Bahn without a validated ticket to arriving at a grocery store on a Sunday. After many trips together, we've figured out the practical side of German travel so you don't have to learn the hard way. This is the cheat sheet we wish someone had handed us on our first trip.</p>
        <cite>‚Äî Scott &amp; Scott</cite>
      </blockquote>
    </div>
  </section>

  <!-- Quick Nav -->
  <section class="prac-quicknav reveal">
    <div class="container-content">
      <div class="prac-quicknav-grid">
        {topics.map((t) => (
          <a href={`#${t.id}`} class="prac-quicknav-chip">
            <span class="prac-quicknav-icon">{t.icon}</span>
            <span class="prac-quicknav-label">{t.title.split(' ').slice(0, 2).join(' ')}</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Topic Sections -->
  {topics.map((topic) => (
    <section class="prac-topic reveal" id={topic.id}>
      <div class="container-content">
        <div class="prac-topic-header" style={`background: ${topic.gradient};`}>
          {topic.video && (
            <video class="prac-topic-video" autoplay muted loop playsinline preload="none">
              <source src={topic.video} type="video/mp4" />
            </video>
          )}
          <div class="prac-topic-header-inner">
            <span class="prac-topic-icon">{topic.icon}</span>
            <h2 class="prac-topic-title">{topic.title}</h2>
            <span class="prac-topic-count">{topic.items.length} tips</span>
          </div>
        </div>

        <div class="prac-tip-grid">
          {topic.items.map((item) => (
            <div class="prac-tip-card">
              <h3 class="prac-tip-label">{item.label}</h3>
              <p class="prac-tip-text" set:html={item.text} />
            </div>
          ))}
        </div>

        {topic.id === 'transport' && (
          <div class="prac-transport-widget">
            <h3 class="prac-transport-widget-title">Search Routes & Book Transport</h3>
            <p class="prac-transport-widget-desc">Compare trains, buses, and ferries between German destinations.</p>
            <div class="prac-transport-widget-inner">
              <p style="font-size: 0.85rem; color: var(--color-slate);">Use <a href="https://www.bahn.com/en" target="_blank" rel="noopener">Deutsche Bahn</a> to search train routes and book tickets, or <a href="https://www.flixbus.com" target="_blank" rel="noopener">FlixBus</a> for budget bus connections across Germany.</p>
            </div>
          </div>
        )}
      </div>
    </section>
  ))}

  <!-- Affiliate Disclosure -->
  <div class="container-content reveal" style="padding-bottom: 0;">
    <p class="prac-affiliate-disclosure">Some links on this page are affiliate links ‚Äî we earn a small commission if you purchase through them, at no extra cost to you. We only recommend gear we personally use on our Germany trips. <a href="/legal/affiliate-disclosure/">Full disclosure</a>.</p>
  </div>

  <!-- Bottom CTA -->
  <section class="prac-cta-section reveal">
    <div class="container-content">
      <div class="prac-cta-card">
        <h2 class="prac-cta-heading">Plan Your Germany Trip</h2>
        <p class="prac-cta-text">Tell our AI planner your dates, budget, and interests ‚Äî it builds a custom day-by-day itinerary with trains, hotels, and activities.</p>
        <a href="/plan/" class="prac-cta-button">Start Planning &rarr;</a>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <FAQ items={[
    { question: "Do I need a visa to visit Germany?", answer: "Most nationalities (US, UK, Canada, Australia, Japan, and 50+ others) can enter Germany visa-free for up to 90 days within a 180-day period. Germany is part of the Schengen Area, so this covers all Schengen countries combined. Starting in 2026, visa-exempt travelers will also need ETIAS authorization (7 EUR, valid for 3 years). Bring your passport with at least 3 months' validity beyond your departure date." },
    { question: "Is Germany safe for tourists?", answer: "Germany is very safe for tourists. Violent crime against visitors is extremely rare. The main concern is minor petty theft in crowded areas of Berlin (Alexanderplatz, major transit hubs) and at large events like Oktoberfest. Use common sense: carry a crossbody bag, keep your phone in a front pocket, be alert on crowded public transport. Tourist areas are well-policed. Germany ranks among the safest countries in Europe." },
    { question: "How much does a trip to Germany cost?", answer: "Budget travelers: 50-80 EUR/day covers hostels, bakery lunches, and public transport. Mid-range: 120-200 EUR/day for 3-star hotels, Gasth√§user, and museum entry. Luxury: 300+ EUR/day for boutique hotels, fine dining, and private tours. A 7-day mid-range trip for two costs roughly 2,500-4,000 EUR total including accommodation, meals, trains, and activities. Germany is moderately priced by Western European standards." },
    { question: "What is the best way to get around Germany?", answer: "Deutsche Bahn (DB) trains connect every major city ‚Äî ICE high-speed trains link Berlin, Munich, Hamburg, and Cologne. The 49 EUR Deutschland-Ticket covers all local and regional transport. FlixBus offers budget intercity connections. Rental cars are great for the Romantic Road, Black Forest, and Rhine Valley. In cities, U-Bahn, S-Bahn, trams, and buses are excellent. Book trains at bahn.com for advance-purchase discounts." },
    { question: "When is the best time to visit Germany?", answer: "May-June and September-October offer the best combination of pleasant weather, manageable crowds, and lower prices. July-August is warm but busy, especially in Bavaria and popular cities. Late September brings Oktoberfest. November-December is Christmas market season ‚Äî magical but cold. Winter in Berlin and northern Germany is grey and chilly, but southern Germany and the Alps offer skiing. Spring brings blooming gardens and fewer tourists." },
    { question: "Do I need to speak German?", answer: "English is widely spoken in tourist areas, hotels, and restaurants ‚Äî especially in Berlin, Munich, and major cities. Smaller towns and rural areas may have limited English. Learning basic phrases (Hallo, Danke, Bitte, Entschuldigung) goes a long way and earns genuine appreciation. Younger Germans almost universally speak English; older generations may not. Google Translate works well offline if you download the German language pack." },
  ]} />

  <!-- Email Capture -->
  <div class="container-content reveal" style="padding-bottom: var(--space-6);">
    <EmailCapture
      leadMagnet="Get Our Free Germany Travel Essentials Guide"
      description="A printable PDF covering everything in this guide ‚Äî plus offline maps, emergency contacts, and a packing checklist."
      bullets={[
        'Schengen visa rules and ETIAS registration walkthrough',
        'ATM strategy and daily budget planner by travel style',
        'Printable German phrase card for restaurants and transport',
        'Packing checklist with summer, winter, and shoulder-season variants',
      ]}
      guideTag="pillar-practical"
    />
  </div>

  <!-- Cross-links -->
  <section class="prac-crosslinks reveal">
    <div class="container-content">
      <h3 class="prac-crosslinks-heading">Explore More</h3>
      <div class="prac-crosslinks-grid">
        <a href="/destinations/" class="prac-crosslink-card">
          <span class="prac-crosslink-icon">&#127965;</span>
          <span class="prac-crosslink-label">All Destinations</span>
          <span class="prac-crosslink-desc">Every city and region we've explored with honest reviews</span>
        </a>
        <a href="/festivals/" class="prac-crosslink-card">
          <span class="prac-crosslink-icon">&#127914;</span>
          <span class="prac-crosslink-label">Festival Calendar</span>
          <span class="prac-crosslink-desc">Germany's best festivals and events, month by month</span>
        </a>
        <a href="/cuisine/" class="prac-crosslink-card">
          <span class="prac-crosslink-icon">&#127860;</span>
          <span class="prac-crosslink-label">Food & Cuisine</span>
          <span class="prac-crosslink-desc">Regional German dishes with where to find the best version</span>
        </a>
        <a href="/history/" class="prac-crosslink-card">
          <span class="prac-crosslink-icon">&#127963;</span>
          <span class="prac-crosslink-label">History & Heritage</span>
          <span class="prac-crosslink-desc">From medieval cathedrals to the fall of the Berlin Wall</span>
        </a>
      </div>
    </div>
  </section>

</BaseLayout>

<!-- Scroll Reveal Observer -->
<script>
  if (!window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
    const revealObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((e) => {
          if (e.isIntersecting) {
            e.target.classList.add('visible');
          }
        });
      },
      { threshold: 0.1, rootMargin: '0px 0px -40px 0px' }
    );
    document.querySelectorAll('.reveal').forEach((el) => revealObserver.observe(el));
  } else {
    document.querySelectorAll('.reveal').forEach((el) => el.classList.add('visible'));
  }
</script>

<style>
  /* ================================================================
     HERO ‚Äî Practical travel gradient (no video)
     ================================================================ */
  .prac-hero {
    position: relative;
    min-height: 55vh;
